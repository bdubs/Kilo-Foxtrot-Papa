<Window x:Class="KinectAudioDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:kv="clr-namespace:Microsoft.Samples.Kinect.WpfViewers;assembly=Microsoft.Samples.Kinect.WpfViewers" 
        Title="Kinect Audio Demo - Sound Source Localization" Height="612" Width="700" WindowState="Maximized">
    <Grid ShowGridLines="True" Background="Black" Height="572">
        <kv:KinectColorViewer Width="320" Height="240" Grid.ColumnSpan="3" Grid.RowSpan="3" Visibility="Hidden" Name="kinectColorViewer1" Kinect="{Binding ElementName=SensorChooser, Path=Kinect}" Margin="0,0" VerticalAlignment="Top" HorizontalAlignment="Center" />
        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Bottom" >
            <!-- x:Name="imgWav" Height="100" Width="500" /-->
            <Border x:Name="bdConf" Width="700" Height="30" BorderBrush="Transparent" BorderThickness="3">
                <Border.Background>
                    <LinearGradientBrush EndPoint="1,0.5" StartPoint="0,0.5">
                        <GradientStop Color="#FF770000" Offset="0" />
                        <GradientStop Color="#FF20CB12" Offset="1" />
                    </LinearGradientBrush>
                </Border.Background>
                <TextBlock x:Name="tbConf" Text="SSL Conf: 0.00" Foreground="Yellow"  HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5,0,0,0"/>
                <Border.Clip>
                    <RectangleGeometry Rect="0,0,100,50" x:Name="clipConf"/>
                </Border.Clip>
            </Border>
            <TextBlock x:Name="tbSpeechStatus" Text="" Foreground="White" Height="60" FontSize="16" TextAlignment="Left" Padding="0,10,0,10" />
            <!--TextBlock x:Name="tbColor" Text="" Foreground="White" Height="50" FontSize="20" TextAlignment="Center" Padding="0,10,0,0"/-->
        </StackPanel>
        <kv:KinectSensorChooser x:Name="SensorChooser" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="350,224,0,166" />
        <Label Content="Label" Height="42" HorizontalAlignment="Left" Margin="13,197,0,0" Name="label1" FontSize="24" VerticalAlignment="Top" Width="234" Foreground="White" />
        <Label Content="Label" Height="43" HorizontalAlignment="Left" Margin="12,140,0,0" Name="lastUsed" FontSize="24" VerticalAlignment="Top" Width="169" Foreground="White">
            <Label.Background>
                <SolidColorBrush />
            </Label.Background>
        </Label>
        <Label Content="Last Callsign:" Height="28" HorizontalAlignment="Left" Margin="13,120,0,0" Name="lastCallSign" VerticalAlignment="Top" Width="155" Foreground="White" />
        <Label Content="Label" Foreground="White" Height="28" HorizontalAlignment="Left" Margin="608,12,0,0" Name="planeLabel1" VerticalAlignment="Top" />
        <Label Content="Label" Foreground="White" Height="28" HorizontalAlignment="Left" Margin="608,46,0,0" Name="planeLabel2" VerticalAlignment="Top" />
        <Label Content="Label" Foreground="White" Height="28" HorizontalAlignment="Left" Margin="608,80,0,0" Name="planeLabel3" VerticalAlignment="Top" />
        <Image Height="150" HorizontalAlignment="Left" Margin="466,114,0,0" Name="ColorCameraImage" Stretch="Fill" VerticalAlignment="Top" Width="200" />
        <Image Height="150" HorizontalAlignment="Left" Margin="260,114,0,0" Name="BackdropImage" Stretch="Fill" VerticalAlignment="Top" Width="200" />
        <Ellipse Height="35" HorizontalAlignment="Left" Margin="225,148,0,0" Name="rightLander" Stroke="Black" VerticalAlignment="Top" Width="38" Fill="Red" />
    </Grid>
</Window>
